<%- include('header') %>
    <header>
        <%- include('navbar') %>
    </header>

    <div class="shop-container">
        <div class="filter-section">
            <h2>Filter Products</h2>

        </div>

        <div class="product-list">
            <% sofas.forEach(sofa => { %>
                <div class="product-card">
                    <img src="<%= sofa.image_url %>" alt="<%= sofa.name %>">
                    <h3>
                        <%= sofa.name %>
                    </h3>
                    <p>$
                        <%= sofa.price %>
                    </p>
                    <!-- <button class="add-to-cart">Add to Cart</button> -->
                    <a href="/sofas/detail/<%= sofa.id%>" class="view-details">View Details</a> ,
                </div>
                <% }); %>
        </div>


    </div>
    </div>

    <%- include('footer') %>